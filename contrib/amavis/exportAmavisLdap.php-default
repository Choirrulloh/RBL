foreach ( array_keys($attributes) as $amavisAttr )
	$lattr  = array_merge($lattr, arrayofListed($mysqli,'ALL',$attributes["$amavisAttr"]['table'],$attributes["$amavisAttr"]['field'],$amavisAttr));
