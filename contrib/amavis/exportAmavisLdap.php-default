/* Delete old attributes */
/* Every time restart from scratch */
foreach( array_keys($attributes) as $amavisAttr )  ldapCheckDel ($conn, $base,$amavisAttr);

/* Add new attribute values */
/* If no values, it DOESN'T ADD an empty value! */
